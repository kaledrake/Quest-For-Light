using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class RunningMC : MonoBehaviour {

  private Animator anim;
  
  private void Start(){
    anim = GetComponentsAnimator>();
  }
  
  private void Update()
  {
    if(Input.GetKey(KeyCode.A) || Input.GetKey.D))
    {
      anim.SetBool('IsRunning', true);
    } else
    {
      anim.SetBool('IsRunning', false);
    }
  }
  

}
